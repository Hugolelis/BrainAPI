generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(45)
  email     String   @db.VarChar(80) @unique
  senha     String   @db.VarChar(45)
  foto      String   @db.VarChar(45)

  acesso    String   @db.VarChar(45)
  deletedAt DateTime? 

  feedbacks Feedback[]

  @@map("usuarios")
}

model Feedback {
  id          Int      @id @default(autoincrement())
  titulo      String   @db.VarChar(45)
  conteudo    String   @db.VarChar(200)
  createdAt   DateTime @default(now())
  
  usuarios_id Int
  usuario     Usuario  @relation(fields: [usuarios_id], references: [id])

  @@map("feedbacks")
}


model Especialidade {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(45) @unique

  @@map("especialidades")
}